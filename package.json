{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "the user management service",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "dev": "cross-env NODE_ENV=dev nodemon --exec ts-node src/server.ts",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "jest --watch --runInBand",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate ./src/migration/migration -d ./src/config/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/config/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/migration/migration -d ./src/config/data-source.ts"
  },
  "author": "rajen gupta rajen90021@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "mock-jwks": "^1.0.10",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "@types/express-validator": "^2.20.33",
    "@types/http-errors": "^2.0.5",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rsa-pem-to-jwk": "^1.1.3",
    "typeorm": "0.3.27",
    "winston": "^3.18.3"
  }
}